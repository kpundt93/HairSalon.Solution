@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Eau Claire's Salon</h1>
<hr />
<h2>Clients</h2>
<ul class="nav justify-content-center">
  <li class="nav-item">
    <a>@Html.ActionLink("Add new client", "Create")</a>
  </li>
  <li class="nav-item">
    <a>@Html.ActionLink("Home", "Index", "Home")</a>
  </li>
</ul>

@if (@Model.Count == 0)
{
  <h4>No clients have been added yet!</h4>
}

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.FirstName}" + " " + $" {client.LastName}", "Details", new { id = client.ClientId })</li>
}